<%- include('../header.ejs'); %>
<h1>Room Index</h1>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
         <div class="form-group">
            <input type="text" placeholder="Room Name" id="roomName" class="form-control">
            <input type="text" placeholder="Room Password" id="roomPasswd" class="form-control">
         </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="btnCreateRoom">Create Room</button>
        </div>
      </div>
    </div>
  </div>
<table class="table">
    <tr>
        <th>Room Name</th>
        <th>Created At</th>
        <th>Protect</th>
        <th>Player</th>
    </tr>
    
<% 
if(room){
    for(let i=0; i<room.length; i++){
    %>
<tr>
    <td><a href="/play?room=<%=room[i]._id%>&uid=<%=user.id%>"><%=room[i].name%></a></td>
    <td><span class="time-since"><%=room[i].createdAt%></span></td>
    <td><%=room[i].password!=''?'Yes':''%></td>
    <td><span><%=room[i].player%>/2</span></td>
</tr>
<% }
    }
 %>
   
</table>
<%- include('../footer.ejs'); %>